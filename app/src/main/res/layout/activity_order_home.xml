<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="OrderHomeActivityBinding">

        <variable
            name="data"
            type="com.darkhorse.mvvmframe.mvvm.data.OrderHomeData" />

        <variable
            name="activity"
            type="com.darkhorse.mvvmframe.ui.OrderHomeActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(data.num)}" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> activity.add(data.num)}" />

    </LinearLayout>
</layout>
